
<%= form_for @resource do |f| %>
  <%= f.association :user %>
  <%= f.input :title %>
  <%= f.file_field :thumb %>
  <%= f.redactor_area :text, {
    buttons: ['formatting', 'bold', 'italic', 'image'],
    plugins: ['fullscreen'],
    imageUpload: '/api/v1/posts/image_upload'
  } %>

  <input id="x" type="hidden" name="content">
  <trix-editor input="x"></trix-editor>
  <%= f.submit %>
<% end %>